normal-border = #505050 1pt solid
hover-border = #ff0000 1.5pt solid

body {
  background #000

  &, * {
    font-family arial, helvetica, sans-serif;
    font-size 9pt;
    margin 0;
    box-sizing border-box
  }
}

#content {
  position absolute
  width 100%
  height 100%
}

#passcodeContainer {
  z-index: 1000
  position absolute
  width 100%
  height 100%
  background: #fff

  div {
    width 100pt
    height 20pt
    position absolute
    margin-left -50pt
    margin-top -10pt
    top 50%
    left 50%

    #password {
      width 100%
      height 100%
      text-align center
    }
  }
}

#userinfo {
  position absolute
  right 10pt
  top 10pt
  a {
    color #0Ff
    font-size 14pt
  }
}

#mobile {

  &, * {
    font-size 24pt
  }

  .row {

    table {
      width 100%
      thead {
        tr {
          td {

            height 50pt
            text-align center

            border-top #ffffff 3pt solid

            & .text {
              font-weight bold
            }
          }
        }
      }

      td {
        border-right normal-border
        border-bottom normal-border
        padding-left 0
        padding-right 2pt
        height 20pt
        vertical-align middle
        text-align right
        width 13%

        &:nth-child(4) {
          width 22%
          text-align center
        }
      }

      tr {
        td {

        }
      }

    }
  }
}

.title {
  text-align center
  font-weight bold
  font-size 20pt
  padding 10pt
  color #fff
}

.change {
  background #283593!important
}

#desktop {

  .col1 {
    width: 3%;
  }
  .col2, .col3, .col4 {
    width: 3.5%;
  }
  .col5, .col6, .col7, .col8, .col9, .col10, .col11, .col12, .col14, .col15, .col16, .col17, .col18, .col19, .col21, .col22, .col23, .col24, .col25, .col26 {
    width: 4%;
  }
  .col13, .col20 {
    width: 6%;
  }

  table {
    width 100%
  //border-top normal-border

    td {
      border-right normal-border
      border-bottom normal-border
      padding-left 2px
      padding-right 0
      height 20px
      vertical-align middle


    }

    thead {
      tr {
        text-align: center;

        &:first-child {
          td {
            border-top #888 3px solid
          }
        }

        td {
          color #f0f0f0
          &.group0 {
            background-color #333333
          }
        }
      }
    }

    tbody {
      tr {
        td {
          text-align right

          &.text {
            text-align left
          }

          &.group0 {
            background-color #1d1d1d
          }
          &.i, &.i .text {
            color #00ff00
          }
          &.d, &.d .text {
            color #ff0000
          }
          &.c, &.c .text {
            color: #ff00ff
          }
          &.f, &.f .text {
            color: #66ffff
          }
          &.e, &.e .text {
            color: #ffff00
          }

          .close {
            display none
            cursor pointer
            color #888
            position absolute
            right 3px
            top 5pt
            &:hover {
              color #fff
            }
          }

          &.input div {
            width 100%
            input {
              width 100%
            }
            border-bottom none
          }
        }

        &:hover td {
          border-bottom hover-border

          .close {
            display inline;

          }

          &.input {
            border-bottom none
          }
        }

        .movable {
          cursor move
        }

        &[draggable="true"] {
          .movable {
            cursor move
          }
          td.group0 {
            background #404
          }
          background #404
        }
      }
    }
  }
}

.i, .i .text {
  color #00ff00
}

.d, .d .text {
  color #ff0000
}

.c, .c .text {
  color: #ff00ff
}

.f, .f .text {
  color: #66ffff
}

.e, .e .text {
  color: #ffff00
}

.q {
  color #fff
}