normal-border = #505050 1px solid
hover-border = #ff0000 2px solid

body {
  background #000
  
  &, * {
    color #ffffff;
    font-family arial, helvetica, sans-serif;
    font-size 12px;
    margin 0;
  }
}

#desktop {
  table {
    width 100%
    border-top normal-border
    td {
      border-right normal-border
      border-bottom normal-border
      padding-left 2px
      padding-right 0
      height 20px
      vertical-align middle
    }
    
    thead {
      tr {
        text-align: center;
        
        td{
          &.group0 {
            background-color #333333
          }
        }
      }
    }
    
    tbody {
      tr {
        td {
          text-align right
          
          &.text {
            text-align left
          }
          
          &.group0 {
            background-color #1d1d1d
          }
          &.i {
            color #00ff00
          }
          &.d{
            color #ff0000
          }
          &.c {
            color: #ff00ff
          }
          &.f {
            color: #66ffff
          }
          &.e {
            color: #ffff00
          }
          
          .close {
            display none
            float right
            cursor pointer
            margin-right 3px
          }
        }
        
        &:hover td {
          border-bottom hover-border
          
          .close {
            display inline;
            
          }
        }
        
        .movable {
          cursor move
        }
        
        &[draggable="true"] {
          .movable {
            cursor move
          }
          td.group0{
            background #404
          }
          background #404
        }
      }
    }
  }
}