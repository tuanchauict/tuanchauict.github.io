
fontSans = 'Source Sans Pro', HelveticaNeue-Light, 'Helvetica Neue', 'Open Sans', "Trebuchet MS", Helvetica, sans-serif;
fontMono = Monaco, Menlo, Consolas, "Courier New", monospace;
baseFontSize = 14px;

html {
    font-family: fontSans;
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
    font-size: 62.5%;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
} 

body {
    // -webkit-font-smoothing: antialiased;
    font-family fontSans
    
    margin: 0;
    font-size: baseFontSize!important;
    line-height: 1.428571429;
    color: #162029;
    background-color: #f6f7f9;
    tab-size: 4;
}

.article-content .entry-content{
    h1, h2, h3, h4, h5, h6, p, li, td, th{
        font-family: fontSans
    } 
}


.article {
    font-size baseFontSize * 1.2!important
    .article-content {
        img {
            display: block!important;
        }
        
        p{
            font-size baseFontSize * 1.2!important
            font-family fontSans!important
        }
        


        code, pre{
            padding: 0 3px 2px;
            font-family fontMono
            font-size: 13px;
            color: #333333;
            -webkit-border-radius: 3px;
            -moz-border-radius: 3px;
            border-radius: 3px;
            border 1px solid rgba(0, 0, 0, 0.15);
            background #f7f7f9
        }
        
        code {
            padding: 2px 4px;
            color: #d14;
            white-space: nowrap;
            background-color: #f7f7f9;
            border: 1px solid #e1e1e8;
        }
        
        code {
            padding: 0;
            color: inherit;
            white-space: pre;
            white-space: pre-wrap;
            background-color: transparent;
            border: 0;
        }

        pre{
            background-color #F5F5F5
            font-size baseFontSize * 0.875 !important
            padding 10px
            line-height 20px
            white-space pre-wrap
            border-radius 4px
            font-family fontMono!important
        }
    }
    

    
}

.article-content h1, .article-content h2, .article-content h3 {
    font-weight: 300;
}


